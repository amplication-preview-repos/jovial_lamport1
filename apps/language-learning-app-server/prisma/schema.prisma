datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt      DateTime   @default(now())
  email          String?
  id             String     @id @default(cuid())
  password       String?
  profilePicture Json?
  progresses     Progress[]
  updatedAt      DateTime   @updatedAt
  username       String?
}

model Course {
  createdAt   DateTime         @default(now())
  description String?
  id          String           @id @default(cuid())
  language    String?
  lessons     Lesson[]
  level       EnumCourseLevel?
  progresses  Progress[]
  title       String?
  updatedAt   DateTime         @updatedAt
}

model Lesson {
  content    String?
  course     Course?    @relation(fields: [courseId], references: [id])
  courseId   String?
  createdAt  DateTime   @default(now())
  id         String     @id @default(cuid())
  progresses Progress[]
  title      String?
  updatedAt  DateTime   @updatedAt
}

model Progress {
  completedAt DateTime?
  course      Course?   @relation(fields: [courseId], references: [id])
  courseId    String?
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  lesson      Lesson?   @relation(fields: [lessonId], references: [id])
  lessonId    String?
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [userId], references: [id])
  userId      String?
}

enum EnumCourseLevel {
  Option1
}
